<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myview="http://schemas.android.com/apk/res/com.example.gigacraft"
    android:id="@+id/layout_setupview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_setupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="16dp"
			android:paddingRight="8dp"
            android:text="setup name" />

        <RadioGroup
            android:id="@+id/radioGroup_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_setup0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"  
                android:text="setup0"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_setup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"  
                android:text="setup1"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>